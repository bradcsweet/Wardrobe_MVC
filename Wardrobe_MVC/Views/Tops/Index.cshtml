@model IEnumerable<Wardrobe_MVC.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <a>
                    <img src="@Html.DisplayFor(modelItem => item.Photo)" />
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.Type)</p>
                        <p>@Html.ActionLink("Details", "Details", new { id = item.TopsID }, new { @class = "btn btn-default", role = "button" })</p>
                    </div>
                </a>
            </div>
            <div class="container-fluid">
                <span>@Html.ActionLink("Edit", "Edit", new { id = item.TopsID }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Details", "Details", new { id = item.TopsID }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Delete", "Delete", new { id = item.TopsID }, new { @class = "btn btn-default", role = "button" })
                </span>
            </div>
        </div>

    }
</div>

